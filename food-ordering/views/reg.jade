doctype html
html
	head
		meta(charset='UTF-8')   
		title Sign in
		link(rel='stylesheet', href='/stylesheets/normalize.css')
		link(rel='stylesheet', href='/stylesheets/signup.css')
		link(rel='stylesheet', href='/stylesheets/header.css')
	body.signup
		include header.jade
		.loginForm
			a.close X
			h1 Log In To Your Account
			form#loginUser(method='post')
				input#user_loginemail.loginEle(autocomplete='off', name='user_email', placeholder='Email', size='30', type='email')
				p.error Fill in email address!
				br
				input#user_loginpassword.strong-password.loginEle(autocomplete='off', name='user_password', placeholder='Password', size='30', type='password')
				p.error Please fill in the blanks!
				br
				input#login_button.signup_button-btn(, name='commit', type='submit', value='Log in') 
			.wrp
				p Don't have an account? 
					a.signuplink(href="/user/register") Sign up for free
		.mask
		.signup-view.clearfix
			.signup-view-large
				form#new-user(method='post')
					div
						input#user_name(autocomplete='off', name='user_name', placeholder='User name', size='30', type='text')
						span.error Fill in!
						input#user_email(autocomplete='off', name='user_email', placeholder='Email', size='30', type='email')
						span.error Fill in!
						span.error.email Fill in correct email format!  
						input#user_password.strong-password(autocomplete='off', name='user_password', placeholder='Password', size='30', type='password')
						span.error Fill in!   
						input#user_phone(autocomplete='off', name='user_phone', placeholder='Mobile phone', size='30', type='number')
						span.error Fill in! 
						input#user_address(autocomplete='off', name='user_address', placeholder='Address', size='30', type='text')
						span.error Fill in!
					input#signup_button.signup_button-btn(data-disable-with='Creating Account...', name='commit', type='submit', value='Sign Up')       
			.signup-view-small 
				h3 WORK IS STRESSFUL, ORDERING FOOD SHOULDN'T BE
				p WE'RE ON TIME Our team works closely with our food vendors to ensure all orders are delivered on time – we don’t want anyone getting h-angry!
				p HONEST PRICING No markups, no rip offs - our pricing is fair and honest.
				p(id='loginForm') log in
	script(src='/javascripts/jquery-2.2.3.min.js')
	script(src='/javascripts/login.js')

