doctype html
html
  head
    meta(charset='UTF-8')
    title my favourite
    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/header.css')
    style.
      body,
      html {
      margin: 0;
      height: 100%;
      font-family: "微软雅黑";
      font-size: 14px;
      }
      .fav-container {
      width: 95%;
      margin: 0 auto;
      margin-top:15px;
      display: -webkit-box;
      display: -ms-flexbox;
      display: -webkit-flex;
      display: flex;
      -webkit-justify-content: flex-start;
      justify-content: flex-start;
      -webkit-flex-wrap: wrap;
      flex-wrap: wrap;
      }
      .fav-item {
      width: 20%;
      margin: 2.5%;
      margin-top: 0;
      height: 200px;
      overflow: hidden;
      border:1px solid #ccc;
      box-sizing:border-box;
      }
      .fav-item img {
      width: 100%;
      height: 130px;
      }
      .fav-item h1 {
      margin:0;
      font-size: 16px;
      }
      a{
      color:black;
      }
      a:focus{
      color:inherit;
      }
  body
    include header.jade
    .fav-container
  script(src='/javascripts/jquery-2.2.3.min.js')
  script(src='/javascripts/jquery.tmpl.min.js')
  script(src='/javascripts/myfav.js')
