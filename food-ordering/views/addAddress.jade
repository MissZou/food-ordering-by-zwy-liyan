.mask(style='position: fixed; left: 0px; top: 0px; width: 100%; height: 100%; opacity: 0.5; z-index: 1000; background: rgb(0, 0, 0);display:none;')
.addressdialog(style='z-index: 1001;display:none;')
  .addressdialog-close
  .addressdialog-header 添加新地址
  .addressdialog-content
    .addressform
      div#updateAddress
        .addressformfield
          label 姓名
          input#username(placeholder='请输入您的姓名')
          .addressformfield-hint
            span.icon-dot-error 请输入收外卖人的姓名
        .addressformfield
          label 类型
          input#type(placeholder='住址类型（公司、个人等）')
          .addressformfield-hint
            span.icon-dot-error 请输入住址类型
        .addressformfield
          label 详细地址
          input#address(placeholder='单元、门牌号')
          .addressformfield-hint
            span.icon-dot-error 请输入详细地址
        .addressformfield.phonefield
          label 手机号
          input#phone(placeholder='请输入您的手机号',type="number")
          .addressformfield-hint
            span.icon-dot-error 请输入您的手机号
        input#addr_id(type="hidden")
        input#index(type="hidden")
      .addressform-buttons
        button#save 保存
        button#updateBtn 保存修改
        button 取消