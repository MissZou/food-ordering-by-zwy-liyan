doctype html
html
  head
    meta(charset='UTF-8')
    title order-confirm-m
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    style.
      * {
      margin: 0;
      padding: 0;
      }
      .clearfix:after {
      content: "";
      display: table;
      height: 0;
      clear: both;
      }
      html {
      font-size: 16px;
      }
      body {
      min-width: 20em;
      width: 100%;
      background: #f2f2f2;
      color: #333;
      font: 100%/1.5 "Helvetica Neue", "Microsoft Yahei", sans-serif;
      }
      ol,
      ul {
      list-style: none;
      padding: 0;
      margin: 0;
      }
      article,
      aside,
      details,
      figcaption,
      figure,
      footer,
      header,
      hgroup,
      main,
      nav,
      section,
      summary {
      display: block;
      }
      .ui-block {
      margin-top: 10px;
      border-top: 1px solid #ddd;
      border-bottom: 1px solid #ddd;
      background: #fff;
      }
      .cart-dish {
      padding: 0 10px;
      border-top: 1px solid #eee;
      -webkit-transition: opacity .3s ease;
      transition: opacity .3s ease;
      }
      .cart-dish:first-child {
      border-top: none;
      }
      .cdish-detail {
      -webkit-box-pack: justify;
      -ms-flex-pack: justify;
      -webkit-justify-content: space-between;
      justify-content: space-between;
      -webkit-box-align: center;
      -ms-flex-align: center;
      -webkit-align-items: center;
      align-items: center;
      display: -webkit-box;
      display: -ms-flexbox;
      display: -webkit-flex;
      display: flex;
      padding: 13px 0;
      line-height: 1.2;
      }
      .cdish-name {
      width: 68%;
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
      display: block;
      }
      .cdish-quantity {
      width: 10%;
      color: #999;
      display: block;
      }
      .ui-multiple:before {
      content: "×";
      margin: 0 .2em 0 0;
      font-family: Verdana, sans-serif;
      font-size: .9em;
      }
      .cdish-cost {
      width: 20%;
      color: #666;
      text-align: right;
      display: block;
      }
      .ui-rmb:before {
      content: "¥";
      margin: 0 .1em 0 0;
      font-family: Arial, sans-serif;
      font-size: .9em;
      }
      .cart-footer {
      margin: 20px 10px 0;
      }
      .cart-summary {
      text-align: right;
      color: #666;
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6,
      p {
      margin: 0 0 .6em;
      }
      .cart-summary>.total-cost {
      color: #d8584a;
      }
      .ui-btn.btn-confirm {
      font-weight: 700;
      }
      .ui-btn {
      display: block;
      width: 100%;
      padding: 10px 0;
      color: #fff;
      border: none;
      border-radius: 3px;
      text-align: center;
      -webkit-transition: color .4s;
      transition: color .4s;
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
      -webkit-appearance: button;
      cursor: pointer;
      font-size: 100%;
      }
      .ui-btn.btn-confirm {
      background: #4cd964;
      }
      .total-cost:before {
      content: "¥";
      margin: 0 .1em 0 0;
      font-family: Arial, sans-serif;
      font-size: .9em;
      }
    link(rel='stylesheet', href='/stylesheets/header-m.css')
  body
    include header-m.jade
    +header-m("http://www.baidu.com","Food cart")
    ul.ui-block
    footer.cart-footer
      p.cart-summary
        span
        |  份美食 
        span.total-cost
      button.ui-btn.btn-confirm
        span 去结算
  script(src='/javascripts/jquery-2.2.3.min.js')
  script(src='/javascripts/jquery.tmpl.min.js')
  script.
    $(function() {
    if (localStorage.getItem('menuOrder')) {
    var orderList = localStorage.getItem('menuOrder');
    console.log(JSON.parse(orderList))
    var orderListArr = JSON.parse(orderList)
    var markup = '<li class="cart-dish ng-scope"> \
    <div class="cdish-detail"><span class="cdish-name">${dishName}</span><span class="ui-multiple cdish-quantity">${num}</span><span class="ui-rmb cdish-cost">${price}</span></div></li>'
    $.template("orderTemplate", markup);
    $.tmpl("orderTemplate", orderListArr)
    .appendTo(".ui-block");
    $(".total-cost").text(localStorage.getItem('totalPrice'));
    $(".cart-summary").find("span").eq(0).text(orderListArr.length);
    }
    $(".btn-confirm").on("click",function(){
    window.location="/user/account/web/confirm/m";
    })
    })
