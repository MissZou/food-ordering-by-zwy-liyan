      .ui-block {
      margin-top: 10px;
      border-top: 1px solid #ddd;
      border-bottom: 1px solid #ddd;
      background: #fff;
      }
      .cart-dish {
      padding: 0 10px;
      border-top: 1px solid #eee;
      -webkit-transition: opacity .3s ease;
      transition: opacity .3s ease;
      }
      .cart-dish:first-child {
      border-top: none;
      }

      .cdish-name {
      width: 68%;
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
      display: block;
      }
      .cdish-quantity {
      width: 10%;
      color: #999;
      display: block;
      }
      .ui-multiple:before {
      content: "×";
      margin: 0 .2em 0 0;
      font-family: Verdana, sans-serif;
      font-size: .9em;
      }
      .cdish-cost {
      width: 20%;
      color: #666;
      text-align: right;
      display: block;
      }
      .ui-rmb:before {
      content: "¥";
      margin: 0 .1em 0 0;
      font-family: Arial, sans-serif;
      font-size: .9em;
      }
      .cart-footer {
      margin: 20px 10px 0;
      }
      .cart-summary {
      text-align: right;
      color: #666;
      }
     
      .cart-summary>.total-cost {
      color: #d8584a;
      }
      .ui-btn.btn-confirm {
      font-weight: 700;
      }
      .ui-btn {
      display: block;
      width: 100%;
      padding: 10px 0;
      color: #fff;
      border: none;
      border-radius: 3px;
      text-align: center;
      -webkit-transition: color .4s;
      transition: color .4s;
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
      -webkit-appearance: button;
      cursor: pointer;
      font-size: 100%;
      }
      .ui-btn.btn-confirm {
      background: #4cd964;
      }
