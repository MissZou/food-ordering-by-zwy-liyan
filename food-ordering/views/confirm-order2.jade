      }
      body {
      min-width: 20em;
      width: 100%;
      background: #f2f2f2;
      color: #333;
      font: 100%/1.5 "Helvetica Neue", "Microsoft Yahei", sans-serif;
      }
      ol,
      ul {
      list-style: none;
      padding: 0;
      margin: 0;
      }
      article,
      aside,
      details,
      figcaption,
      figure,
      footer,
      header,
      hgroup,
      main,
      nav,
      section,
      summary {
      display: block;
