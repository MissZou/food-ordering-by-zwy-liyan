doctype html
html
  head
    meta(charset='UTF-8')
    title dish-rate
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    link(rel='stylesheet', href='/stylesheets/header-m.css')
    link(rel='stylesheet', href='/stylesheets/common.css')
    link(rel='stylesheet', href='/stylesheets/menu-m.css')
    link(rel='stylesheet', href='/stylesheets/shop-detail.css')
    link(rel='stylesheet', href='/stylesheets/search-result.css')
    style.
      .userName{
      display:none;
      }
      .comment-item{
      list-style:none;
      width: 90%;
      margin: 10px auto;
      border-bottom: 1px solid #ccc;
      font-size:18px;
      }
      .date{
      font-style:italic;
      }
      .comment{
      background:#fff;
      margin-top:-10px;
      }
  body
    include header-m.jade
    +header-m("Comment")
    input#shopName(type="hidden",value= shopName)
    ul.restaurant-tabs.clearfix
      li.restaurant-tab.menuTab Menu
      li.restaurant-tab.active Comment
      li.restaurant-tab.infoTab Info
    ul.comment
      - for (var j = 0; j < doc.length; j++){
      - var str = String(doc[j].date).substr(4,20);
        li.comment-item
          div.userName= doc[j].comment.userId
          div.date= str
          div.rate-wrap
            .star-rating(progress-meter="5")
              .star-meter(progress-fill=doc[j].comment.mark style="width: "+doc[j].comment.mark/5*100+"%;")
          div.content= doc[j].comment.content
      -}
    
  script(src='/javascripts/jquery-2.2.3.min.js')
  script(src='/javascripts/rate-m.js')
  script(src='/javascripts/header.js')
